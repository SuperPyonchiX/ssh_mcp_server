{
  "servers": {
    "ssh-mcp-server": {
      "type": "stdio",
      "command": "node",
      "args": ["build/index.js"],
      "env": {
        "UBUNTU_SSH_HOST": "192.168.1.100",
        "UBUNTU_SSH_PORT": "22",
        "UBUNTU_SSH_USERNAME": "ubuntu",
        "UBUNTU_SSH_PASSWORD": "your_password_here"
      }
    }
  }
}

